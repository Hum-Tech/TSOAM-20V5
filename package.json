{
  "name": "tsoam-church-management",
  "version": "1.0.0",
  "description": "TSOAM Church Management System - Production Ready",
  "main": "server/index.js",
  "scripts": {
    "setup": "node setup-system.js",
    "cleanup": "node cleanup-system.js",
    "install-all": "npm install && cd client && npm install && cd ../server && npm install",
    "build": "npm run client:build",
    "build:client": "cd client && npm install && npm run build-only",
    "build-production": "node build-production-final.js",
    "start": "node start-production.js",
    "start:direct": "node server/server.js",
    "dev": "concurrently \"cd client && npm run dev\" \"cd server && npm run dev\"",
    "dev-server": "cd server && npm run dev",
    "dev-client": "cd client && npm run dev",
    "create-db": "mysql -u root -p -e \"CREATE DATABASE IF NOT EXISTS tsoam_church_db CHARACTER SET utf8mb4 COLLATE utf8mb4_unicode_ci\"",
    "import-schema": "mysql -u root -p tsoam_church_db < database/schema.sql",
    "optimize-db": "mysql -u root -p tsoam_church_db < database/optimize_database.sql",
    "backup-db": "mysqldump -u root -p tsoam_church_db > backups/tsoam_backup_$(date +%Y%m%d_%H%M%S).sql",
    "test-connection": "cd server && node -e \"require('./config/database').testConnection()\"",
    "production": "npm run build-production",
    "reset-db": "mysql -u root -p -e \"DROP DATABASE IF EXISTS tsoam_church_db; CREATE DATABASE tsoam_church_db CHARACTER SET utf8mb4 COLLATE utf8mb4_unicode_ci\" && npm run import-schema",
    "clean": "rm -rf client/dist server/uploads/* logs/* node_modules/*/node_modules",
    "health-check": "curl -f http://localhost:3001/api/health || exit 1",
    "deploy:database": "node deploy-database.js",
    "init:enterprise": "node database/init_enterprise.js",
    "verify:environment": "node deploy-database.js --verify-only",
    "deploy:production": "npm run verify:environment && npm run deploy:database && npm run build-production",
    "build:simple": "cd client && npx vite build",
    "build:check": "cd client && npx tsc --noEmit --skipLibCheck",
    "cleanup-demo-data": "node scripts/cleanup-demo-data.js",
    "cleanup-demo-data:dry-run": "node scripts/cleanup-demo-data.js --dry-run",
    "cleanup-appointments": "node scripts/cleanup-demo-data.js --module appointments",
    "cleanup-members": "node scripts/cleanup-demo-data.js --module members",
    "cleanup-financial": "node scripts/cleanup-demo-data.js --module financial",
    "cleanup-inventory": "node scripts/cleanup-demo-data.js --module inventory",
    "cleanup-events": "node scripts/cleanup-demo-data.js --module events",
    "cleanup-hr": "node scripts/cleanup-demo-data.js --module hr",
    "cleanup-welfare": "node scripts/cleanup-demo-data.js --module welfare",
    "cleanup-users": "node scripts/cleanup-demo-data.js --module users",
    "backup-database": "node scripts/backup-database.js",
    "test-system": "node scripts/test-system.js",
    "import-members": "node scripts/import-data.js --type members",
    "import-financial": "node scripts/import-data.js --type financial",
    "organize-production": "node scripts/organize-for-production.js",
    "package-production": "npm run organize-production && tar -czf tsoam-production-package.tar.gz .",
    "deploy": "node deploy-production.js",
    "verify": "node verify-system.js",
    "postinstall": "cd client && npm install && cd ../server && npm install",
    "client:build": "cd client && npm run build",
    "server:build": "cd server && npm run build",
    "db:migrate": "node scripts/sync-database.js",
    "demo:disable": "node scripts/manage-demo-data.js disable",
    "demo:enable": "node scripts/manage-demo-data.js enable",
    "production:setup": "node cleanup-for-production.js",
    "mysql:init": "cd server && node init-mysql.js",
    "mysql:setup": "npm run mysql:init",
    "mysql:production": "node setup-mysql-production.js",
    "test:mysql": "node test-mysql.js",
    "db:init": "cd server && node init-complete-db.js",
    "db:setup": "npm run db:init"
  },
  "keywords": [
    "church",
    "management",
    "system",
    "tsoam",
    "members",
    "finance",
    "inventory",
    "hr",
    "welfare"
  ],
  "author": "TSOAM Development Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tsoam/church-management-system.git"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "sqlite3": "^5.1.7"
  }
}