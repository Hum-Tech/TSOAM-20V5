# TSOAM Church Management System - Environment Configuration
# Copy this file to .env and configure for your environment

# ========================================
# DATABASE CONFIGURATION
# ========================================
# Leave empty to use SQLite (recommended for easy deployment)
# Configure for MySQL if you have a MySQL server available

# MySQL Configuration (Optional)
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=
DB_NAME=tsoam_church_db

# SQLite Configuration (Automatic)
# SQLite will be used automatically if MySQL is not configured
# Database file: server/database/tsoam_church.db
USE_SQLITE=true

# ========================================
# SERVER CONFIGURATION  
# ========================================
PORT=3002
NODE_ENV=production
HOST=0.0.0.0

# Frontend URL (for CORS)
CLIENT_URL=http://localhost:5173

# ========================================
# SECURITY CONFIGURATION
# ========================================
# JWT Secret (Generate with: openssl rand -base64 64)
JWT_SECRET=tsoam_jwt_secret_key_2024_secure_random_string
JWT_EXPIRES_IN=24h

# Session Configuration
SESSION_TIMEOUT=3600
BCRYPT_ROUNDS=12

# ========================================
# CHURCH CONFIGURATION
# ========================================
CHURCH_NAME=The Seed of Abraham Ministry (TSOAM)
CHURCH_EMAIL=admin@tsoam.org
CHURCH_PHONE=+254-700-000-000
CHURCH_ADDRESS=Nairobi, Kenya

# ========================================
# FILE UPLOAD CONFIGURATION
# ========================================
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=jpeg,jpg,png,pdf,doc,docx

# ========================================
# EMAIL CONFIGURATION (Optional)
# ========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@tsoam.org
FROM_NAME=TSOAM Church Management

# ========================================
# LOGGING CONFIGURATION
# ========================================
LOG_LEVEL=info
DEBUG=false

# ========================================
# BACKUP CONFIGURATION
# ========================================
BACKUP_PATH=./backups
AUTO_BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
